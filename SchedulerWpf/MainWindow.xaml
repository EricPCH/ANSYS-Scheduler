<Window x:Class="SchedulerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AEDT Scheduler" Height="450" Width="800">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}" />
            </StatusBarItem>
        </StatusBar>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <Button Content="Add File" Margin="2" Click="AddFile_Click"/>
            <Button Content="Remove" Margin="2" Click="Remove_Click"/>
            <Button Content="Up" Margin="2" Click="Up_Click"/>
            <Button Content="Down" Margin="2" Click="Down_Click"/>
            <CheckBox x:Name="NgCheckBox" Content="Non Graphical" Margin="15,0,0,0"/>
        </StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <GroupBox Header="Queue Jobs" Margin="5" Grid.Row="0">
                <DataGrid x:Name="QueueGrid" ItemsSource="{Binding Queue}" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Extended">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="File" Binding="{Binding FileName}"/>
                        <DataGridCheckBoxColumn Header="NG" Binding="{Binding NonGraphical}"/>
                        <DataGridTextColumn Header="Submit Time" Binding="{Binding SubmitTime}"/>
                        <DataGridTextColumn Header="Full Path" Binding="{Binding FullPath}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <GroupBox Header="Completed Jobs" Margin="5" Grid.Row="1">
                <DataGrid x:Name="FinishedGrid" ItemsSource="{Binding Finished}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="File" Binding="{Binding FileName}"/>
                        <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}"/>
                        <DataGridTextColumn Header="Stop Time" Binding="{Binding StopTime}"/>
                        <DataGridTextColumn Header="Duration" Binding="{Binding Duration}"/>
                        <DataGridTextColumn Header="Full Path" Binding="{Binding FullPath}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
